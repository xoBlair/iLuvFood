<!DOCTYPE html>
<html>
<%= javascript_include_tag :defaults %>
<head>
<link href="data:image/x-icon;base64," rel="icon" type="image/x-icon" />
  <title>Scarf</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link href='https://fonts.googleapis.com/css?family=Architects+Daughter' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Indie+Flower' rel='stylesheet' type='text/css'>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body id="homepage">
<nav class="navbar navbar-inverse header">
  <div class="row container-fluid">
    <div class="navbar-header col-md-2 col-sm-2 col-xs-2">
      <a class="navbar-brand" href="/home"><img class="logo" src="/assets/scarflogo.png"></a>
    </div>
    <div class="about col-md-1 col-sm-1 col-xs-1"><a href="/about_me">About Scarf</a></div>
    
	    <% if logged_in? %>
	    <div class="row">
      		<ul class="nav navbar-nav navbar-right">
      			<li><a href="/recipes">All Recipes</a></li>
      			<li><a href="/recipes/new">New Recipe</a></li>
      			<div class="col-md-2 col-sm-2 col-xs-2 username">
	      			<li><p>Welcome, <%= @current_user.first_name %></li>
	      			</p>
      			</div>
      			<div class="col-md-2 col-sm-2 col-xs-2">
        			<li><a class="navbar-brand" href="/profile"><img class="avatar  img-responsive" src="<%= @current_user.avatar.url(:thumb) %>" alt="avatar"></a></li>
        		</div>
        		<div class="col-md-3 col-sm-3 col-xs-3 logout">
	    			<li><a href="/logout"><span class="glyphicon glyphicon-log-in"></span> Log Out</a></li>
	    		</div>
       		</ul>
       	</div>
      	<% else %>
      	<ul class="nav navbar-nav navbar-right">
	    	<li><a href="users/new"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
	        <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
	    </ul>
	   <% end %>
    
  </div>
</nav>

	<%= yield %>

</body>
</html>
