<section id="user_page">
  <div class="row">
    <div class="col-md-4"></div>
    <h1 id="user_recipe" class="col-md-4"><%= current_user.first_name.capitalize %>'s recipes</h1>
      <% @recipes.each do |stuff|  %>
  </div>
  <div class="col-md-4 user_display">
    <div class="thumbnail">
      <img src="<%= stuff.image.url(:medium) %>" alt="...">
      <div class="caption">
        <h3><%= stuff.title %></h3>
        <p><%= stuff.recipe %></p>
        <p>
        	<button type="button" class="btn btn-default" aria-label="Left Align"><span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span></button>
        	<button type="button" class="btn btn-default" aria-label="Left Align"><span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span></button>
            <ul class="list-inline">
              <li>
                <%= link_to 'Delete', recipe_path(stuff), method: :delete, data: { confirm: 'Are you sure?' } %>
              </li>

              <li>
                <a href="/destroy" class="btn btn-default btn-md active" role="button">Delete</a>
                <a href="/edit" class="btn btn-default btn-md active" role="button">Edit</a>
              </li>
            </ul>
		    </p>
    </div>
    </div>
  </div>
  <% end %>
</section>


